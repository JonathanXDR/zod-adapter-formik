{
  "compilerOptions": {
    "target": "ESNext",
    "module": "Preserve",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "allowUmdGlobalAccess": true,
  },
  "include": ["./src"],
  "exclude": [
    "dist",
    "node_modules",
    "examples",
    "tests",
    "coverage",
    ".github"
  ]
}
