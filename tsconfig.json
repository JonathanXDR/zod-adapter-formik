{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs", 
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["ES2019"],
    "skipDefaultLibCheck": true
  },
  "include": ["./src"],
  "exclude": [
    "node_modules",
    "samples",
    "tests",
    "dist",
    "coverage",
    ".github"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./v4": {
      "import": "./dist/v4/index.js",
      "require": "./dist/v4/index.js",
      "types": "./dist/v4/index.d.ts"
    }
  },
}
