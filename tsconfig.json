{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["ES2019"],
    "skipDefaultLibCheck": true
  },
  "include": ["./src"],
  "exclude": [
    "node_modules",
    "samples",
    "tests",
    "dist",
    "coverage",
    ".github"
  ]
}